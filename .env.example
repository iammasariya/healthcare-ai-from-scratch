# Application Settings
APP_NAME=Healthcare AI Service
APP_VERSION=0.1.0
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=/var/log/healthcare-ai/app.log

# Security Settings (adjust for production)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# Request Settings
MAX_NOTE_LENGTH=10000
REQUEST_TIMEOUT=30

# Privacy Settings
LOG_PAYLOAD_PREVIEW_LENGTH=100

# LLM Settings (Post 2)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here
LLM_ENABLED=true
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=2

